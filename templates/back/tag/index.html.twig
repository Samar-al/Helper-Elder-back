{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
   
    <div class="container">
        <h1>Liste des services</h1>
        <a href="{{ path('app_back_tag_new') }}"><button type="button" class="btn btn-secondary">Ajouter un service</button></a>
        <div class="index">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Créé le</th>
                    <!-- <th>Mis à jour le</th> -->
                    <th>Logo</th>  
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</td>
                    <td>{{ tag.description }}</td>
                    <td>{{ tag.createdAt ? tag.createdAt|date('d-m-Y') : '' }}</td>
                    <!-- <td>{{ tag.updatedAt ? tag.updatedAt|date('Y-m-d H:i:s') : '' }}</td> -->
                    <td><img src="{{asset('images/' ~ tag.logo)}}" alt="" width="100" height="100"></td> 
                    <td>
                        <a class="btn btn-secondary" href="{{ path('app_back_tag_show', {'id': tag.id}) }}"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-info" href="{{ path('app_back_tag_edit', {'id': tag.id}) }}"><i class="bi bi-pencil"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    </div>

{% endblock %}
