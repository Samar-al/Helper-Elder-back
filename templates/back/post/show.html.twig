{% extends 'base.html.twig' %}

{% block title %}Annonce détaillée{% endblock %}

{% block body %}
<div class="container">
    <h1>Annonce détaillée</h1>
    <div class="index">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Prix / heure</th>
                <td>{{ post.hourlyRate }} €</td>
            </tr>
            <tr>
                <th>Nature du service</th>
                <td>{{ post.workType ? 'Ponctuelle' : 'Régulier' }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ post.postalCode }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ post.radius }} km</td>
            </tr>
            <tr>
                <th>Service(s)</th>
                 <td>
                {% for tag in post.tag %}
                 {{ tag.name }},
                {% endfor %}
                </td> 
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>Créée le</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifiée le</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <a href="{{ path('app_back_post_index') }}"><button type="button" class="btn btn-secondary">Retour à liste</button></a>

    <a href="{{ path('app_back_post_edit', {'id': post.id}) }}"><button type="button" class="btn btn-secondary">Modifier</button></a>

    {{ include('back/post/_delete_form.html.twig') }}
</div>    
{% endblock %}
